<SubWindows:BaseSubWindow x:Class="ModAPI.Windows.SubWindows.DeleteModConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:SubWindows="clr-namespace:ModAPI.Windows.SubWindows"
        xmlns:Utils="clr-namespace:ModAPI.Utils" 
        Style="{StaticResource SubWindow}"
        Title="DeleteModConfirm" Height="200" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300" MaxWidth="{Binding ElementName=Window,Path=ActualWidth}" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,10">
            <Image Source="/resources/textures/Icons/Icon_Warning.png" Width="24" Height="24" Margin="0,0,10,0" VerticalAlignment="Center" />
            <TextBlock x:Name="MessageText" Style="{StaticResource NormalLabel}" TextWrapping="Wrap" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ConfirmButton" Style="{StaticResource NormalButton}" Click="Confirm_Click" Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <Image Margin="0,0,5,0" Source="/resources/textures/Icons/Icon_Continue.png" />
                    <TextBlock Utils:Language.Key="Buttons.Yes" />
                </StackPanel>
            </Button>
            <Button x:Name="CancelButton" Style="{StaticResource NormalButton}" Click="Cancel_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Utils:Language.Key="Buttons.No" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</SubWindows:BaseSubWindow>
